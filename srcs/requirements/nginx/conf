events {

}

http {
	server {
		listen 443 ssl;
		listen [::]:443 ssl;

		server_name ${DOMAIN_NAME};

		# SSL 
		ssl_certificate	"/etc/ssl/certs/nginx_selfsigned.crt";
		ssl_certificate_key "/etc/ssl/private/nginx_selfsigned.key";
   		ssl_protocols	TLSv1.2 TLSv1.3;

		location / {
			root	/var/www/html;
			index	index.php;
		}
	}
}